@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-dark bg-dark navcustom">
	<div class="container-fluid">
		<a class="navbar-brand" href="">Главная</a>
		<button class="navbar-toggler" title="CollapseMenu" @onclick="OnCollapseOrShowMenuLink" type="button" data-bs-toggle="collapse"
				data-bs-target="#navbarSupportedContent">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="@_classCollapseMenu" id="navbarNavDropdown">
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">
				<li class="nav-item">
					<a class="nav-link active" aria-current="page" href="webgl">WebGL</a>
                </li> 
                @*<li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="mlnet">ML.NET</a>
                </li>*@
            </ul>
		</div>
	</div>
</nav>

@code {

	private string _classCollapseMenu = "navbar-collapse collapse";

	private void OnCollapseOrShowMenuLink()
	{
		if (_classCollapseMenu == "navbar-collapse collapse")
			_classCollapseMenu += " show";
		else
			_classCollapseMenu = _classCollapseMenu.Replace(" show", "");
	}

}
